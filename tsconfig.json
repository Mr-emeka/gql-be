{
    "compilerOptions": {
      "baseUrl": "./src",
      "paths": {
        "@resolvers/*": ["resolvers/*"],
        "@schemas/*": ["schemas/*"],
        "@helpers/*": ["helpers/*"],
        "@middlewares/*": ["middlewares/*"],
        "@services/*": ["services/*"],
        "@interfaces/*": ["interfaces/*"],
        "@utils/*": ["utils/*"],
        "@models/*": ["models/*"],
        "@config/*": ["config/*"],
        "@misc/*": ["misc/*"],
        "@data/*": ["data/*"],
        "@rest-api/*": ["rest-api/*"]
      },
      "target": "ES2020",
      "module": "CommonJS",
      "outDir": "./dist",
      "esModuleInterop": true,
      "sourceMap": true,
      "strict": true,
      "moduleResolution": "Node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true
    }
  }